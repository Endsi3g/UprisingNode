generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("PARTNER")
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leads        Lead[]
  transactions Transaction[]
  messages     Message[]
}

model Lead {
  id            String     @id @default(uuid())
  url           String
  companyName   String?
  status        String   @default("PROSPECT")
  score         Int?
  industry      String?
  analysis      String?    // Stored as JSON string
  ownerId       String
  owner         User       @relation(fields: [ownerId], references: [id])
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Transaction {
  id          String            @id @default(uuid())
  amount      Float
  type        String
  status      String   @default("PENDING")
  description String?
  userId      String
  user        User              @relation(fields: [userId], references: [id])
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model Message {
  id        String   @id @default(uuid())
  content   String
  sender    String   // "me" or "operator" or userId
  attachment String?
  read      Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Resource {
  id          String           @id @default(uuid())
  title       String
  category    String   @default("OTHER")
  type        String           // PDF, PPTX, etc.
  url         String
  size        String?
  description String?
  updatedAt   DateTime         @updatedAt
}
